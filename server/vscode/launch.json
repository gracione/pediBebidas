{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Adonis Debug",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "debug"
        ],
        "port": 9229,
        "timeout": 30000,
        "skipFiles": [
          "<node_internals>/**"
        ],
        "sourceMaps": true,
        "protocol": "inspector",
        "restart": true
      }
    ]
  }
  